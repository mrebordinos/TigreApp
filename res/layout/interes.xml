<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    
  	<TextView 
  		android:id="@+id/nombrePunto" 
  		android:layout_width="fill_parent" 
  		android:layout_height="wrap_content" 
  		android:text="@string/nombrePunto" 
  		android:textColor="@color/colorTexto"
  		android:textSize="15sp" />
  		
  	<EditText 
  		android:id="@+id/titulo" 
  		android:layout_width="fill_parent" 
  		android:layout_height="wrap_content" />
  	
  	<TextView 
  		android:id="@+id/comentPunto" 
  		android:layout_width="fill_parent" 
  		android:layout_height="wrap_content" 
  		android:text="@string/comentPunto" 
  		android:textColor="@color/colorTexto"
  		android:textSize="15sp" />
  		
  	<EditText
  		android:id="@+id/texto" 
  		android:layout_width="fill_parent" 
  		android:layout_height="wrap_content"  
  		android:lines="2" />
  	
  	 <TextView
  		android:layout_width="fill_parent" 
  		android:layout_height="wrap_content"
  		android:padding="10px" 
  		android:text="@string/iconos" 
   		android:textColor="@color/colorTexto"
  		android:textSize="15sp" />
  			
    
  	<RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/iconoRadio">
        <RadioButton
        	android:id="@+id/chinroja" />
        <ImageView
    		android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="10px"
			android:src="@drawable/mappin_red" />
        <RadioButton
            android:id="@+id/chinazul" />
        <ImageView
  			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="10px"
			android:src="@drawable/mappin_blue" />
        <RadioButton
            android:id="@+id/marcaa" />
        <ImageView
	  		android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="10px"
	  		android:src="@drawable/mappinr" />
	   </RadioGroup>
	  <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:id="@+id/iconoRadio2">	
        <RadioButton
            android:id="@+id/marcab" />
        <ImageView
	  		android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="10px"
	  		android:src="@drawable/mappiny" />
	  	<RadioButton
	  		android:id="@+id/arbol" 
	  		android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	  	<ImageView
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	  		android:src="@drawable/tree_icon" />	
	  	<RadioButton
	  		android:id="@+id/flag" 
	  		android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
	  	<ImageView
	  		android:layout_width="wrap_content"
	  		android:layout_height="wrap_content"
	  		android:src="@drawable/flag_icon" />	

    </RadioGroup>
    
  	<Button 
  		android:id="@+id/botonGuardar" 
  		android:layout_width="wrap_content" 
  		android:layout_height="wrap_content" 
  		android:text="@string/botonGuardar"
  		android:textAlign="center"
        android:layout_gravity="right" /> 

</LinearLayout>
</ScrollView>