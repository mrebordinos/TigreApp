<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">
    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
   	<TextView
  		android:layout_width="fill_parent" 
  		android:layout_height="wrap_content" 
  		android:padding="10px"
  		android:text="Seleccion de zona: " 
  		android:textStyle="bold"
  		android:textColor="@color/colorTexto"
  		android:textSize="15sp" />
  
  	<TextView android:id="@+id/modo"
  		android:layout_width="fill_parent" 
  		android:layout_height="wrap_content" 
  		android:padding="10px" 
  		android:textColor="@color/colorTexto"
  		android:textSize="15sp" />
  	
  	<TextView android:id="@+id/coordenadas"
  		android:layout_width="fill_parent" 
  		android:layout_height="wrap_content"   		  	
  		android:textSize="15sp" />
	
	<Spinner android:id="@+id/spinner5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true" />

	<TextView
  		android:layout_width="fill_parent" 
  		android:layout_height="wrap_content" 
  		android:padding="10px"
  		android:text="Seleccionar tipo de informacion" 
  		android:textColor="@color/colorTexto"
  		android:textSize="15sp" />
  		
   <Spinner android:id="@+id/spinner6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true" />
    
	<TextView
  		android:layout_width="fill_parent" 
  		android:layout_height="wrap_content" 
  		android:padding="10px"
  		android:text="Distancia max" 
  		android:textColor="@color/colorTexto"
  		android:textSize="15sp" />
  		
   <Spinner android:id="@+id/spinner7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true" />
		
    <Button 
  		android:id="@+id/botonConsulta" 
  		android:layout_width="wrap_content" 
  		android:layout_height="wrap_content" 
  		android:padding="10px"
  		android:text="@string/botonGuardar"
  		android:textAlign="center"
        android:layout_gravity="right" /> 

</LinearLayout>
</ScrollView>